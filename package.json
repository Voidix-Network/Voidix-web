{
  "name": "voidix-web",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Voidix官网 - React + TypeScript + Vite",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/generateStaticPages.js && npm run generate:sitemap",
    "build:prerender": "tsc && vite build && npm run generate:sitemap && npm run prerender:puppeteer",
    "build:pages": "node scripts/generateStaticPages.js",
    "check:preload": "node scripts/checkPreloadTags.js",
    "prerender:puppeteer": "node scripts/prerenderPuppeteer.js",
    "generate:sitemap": "node scripts/generateSitemap.js",
    "preview": "vite preview",
    "type-check": "npx tsc --noEmit",
    "style": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "style:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "npm run style:check && npm run type-check",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:html": "prettier --write \"dist/**/*.html\" --plugin=prettier-plugin-tailwindcss",
    "test": "vitest",
    "test:dev": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.6",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.30",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.3",
    "autoprefixer": "^10.4.16",
    "html-minifier-terser": "^7.2.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "puppeteer": "^24.10.0",
    "serve": "^14.2.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^6.3.7",
    "vite-plugin-compression2": "^2.2.0",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
