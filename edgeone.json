{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "nodeVersion": "18.20.4",
  "redirects": [
    {
      "source": "/monitor",
      "destination": "https://status.voidix.net/",
      "statusCode": 301
    },
    {
      "source": "https://voidix.net/*",
      "destination": "https://www.voidix.net/:splat",
      "statusCode": 301
    }
  ],
  "headers": [
    {
      "source": "/*",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "caches": [
    {
      "source": "/assets/*",
      "ttl": 31536000
    },
    {
      "source": "/sitemap.xml",
      "ttl": 0
    },
    {
      "source": "/robots.txt",
      "ttl": 86400
    }
  ]
}
